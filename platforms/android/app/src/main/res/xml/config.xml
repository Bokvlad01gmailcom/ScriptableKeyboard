<?xml version='1.0' encoding='utf-8'?>
<widget id="com.scriptable.keyboard" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="KeyboardPlugin">
        <param name="android-package" value="com.scriptable.keyboard.KeyboardPlugin" />
    </feature>
    <feature name="File">
        <param name="android-package" value="org.apache.cordova.file.FileUtils" />
        <param name="onload" value="true" />
    </feature>
    <allow-navigation href="cdvfile:*" />
    <feature name="Device">
        <param name="android-package" value="org.apache.cordova.device.Device" />
    </feature>
    <name>ScriptableKeyboard</name>
    <description>Расширяемая клавиатура с системой скриптов</description>
    <author email="dev@example.com" href="https://example.com">Developer</author>
    <content src="index.html" />
    <preference name="loglevel" value="DEBUG" />
    <preference name="android-minSdkVersion" value="21" />
    <preference name="android-targetSdkVersion" value="34" />
    <preference name="android-compileSdkVersion" value="34" />
</widget>
