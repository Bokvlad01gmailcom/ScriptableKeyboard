<?xml version='1.0' encoding='utf-8'?>
<widget id="com.scriptable.keyboard" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>ScriptableKeyboard</name>
    <description>Расширяемая клавиатура с системой скриптов</description>
    <author email="dev@example.com" href="https://example.com">Developer</author>
    
    <content src="index.html" />
    
    <platform name="android">
        <preference name="android-minSdkVersion" value="21" />
        <preference name="android-targetSdkVersion" value="35" />
        <preference name="android-compileSdkVersion" value="35" />
        
        <!-- Разрешения -->
        <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
        <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
        <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
        
        <!-- InputMethodService -->
        <service android:name="com.scriptable.keyboard.KeyboardService"
                 android:permission="android.permission.BIND_INPUT_METHOD"
                 android:exported="true">
            <intent-filter>
                <action android:name="android.view.InputMethod" />
            </intent-filter>
            <meta-data android:name="android.view.im" android:resource="@xml/method" />
        </service>
        
        <!-- Ресурсы -->
        <resource-file src="res/xml/method.xml" target="res/xml/method.xml" />
    </platform>
    
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-device" spec="2.1.0" />
    <plugin name="cordova-plugin-file" spec="8.1.3" />
    <plugin name="cordova-plugin-keyboard-native" spec="file:plugins/cordova-plugin-keyboard-native" />
</widget>